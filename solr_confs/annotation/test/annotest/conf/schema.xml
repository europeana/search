			multiValued="true"/>

		<!-- Generated Fields -->
		<copyField source="body_value" dest="text" />
		<copyField source="body_value.*" dest="text" />
	
		<!-- required field -->
		<field name="_version_" type="long" indexed="true" stored="true"
				multiValued="false" />

	</fields>

	<uniqueKey>anno_uri</uniqueKey>
